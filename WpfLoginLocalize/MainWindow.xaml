<Window x:Class="WpfLoginLocalize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLoginLocalize"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <DockPanel>
        <Menu x:Name="MainMenu" DockPanel.Dock="Top" Height="30">
            <MenuItem x:Name="FileMenu" Header="Файл" Height="30"/>
            <MenuItem x:Name="EditMenu" Header="Правка" Height="30"/>
            <MenuItem x:Name="HelpMenu" Header="Довідка" Height="30"/>
        </Menu>
        <Canvas DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
